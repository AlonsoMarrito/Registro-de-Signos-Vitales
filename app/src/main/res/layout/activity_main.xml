<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F5D75"
    tools:context=".MainActivity">

    <!-- CardView Principal -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#4F5D75"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4F5D75"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="146dp"
                android:layout_height="135dp"
                app:srcCompat="@drawable/relojes_login" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="271dp"
                android:layout_height="66dp"
                app:srcCompat="@drawable/vitalbrace_logonocturno_" />

            <Button
                android:id="@+id/buttonChangeWindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="#E48B4E"
                android:text="Entrar"
                android:textColor="#000000" />

            <Button
                android:id="@+id/buttonInstagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#bfc0c0"
                android:text="Instagram"
                android:textColor="#000000" />

            <Button
                android:id="@+id/buttonFb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#bfc0c0"
                android:text="Facebook"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/textUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:textAlignment="center"
                android:visibility="gone" />

            <EditText
                android:id="@+id/textContraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#57AACE"
                android:text="Cancelar"
                android:textColor="#000000" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>